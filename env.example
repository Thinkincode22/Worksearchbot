# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Database Configuration
# Для PostgreSQL (рекомендовано для продакшену):
DATABASE_URL=postgresql://user:password@localhost:5432/worksearchbot
# Або для SQLite (тільки для локального тестування):
# DATABASE_URL=sqlite:///./worksearchbot.db

# Redis Configuration (опціонально)
REDIS_URL=redis://localhost:6379/0

# Admin Configuration
ADMIN_USER_IDS=123456789,987654321  # Telegram ID адмінів через кому

# Scraping Configuration
SCRAPING_INTERVAL_MINUTES=60  # Інтервал між запусками скраперів
SCRAPING_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=30
MAX_REQUESTS_PER_HOUR=200

# User Agent для скраперів
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
